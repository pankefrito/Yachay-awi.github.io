    <script>
        let correctas = 0;
        let contestadas = 0;
        const total = 10;

        function verificar(boton, esCorrecto) {
            let resultado = boton.parentNode.querySelector(".resultado");
            if (resultado.textContent !== "") return; // evita repetir

            contestadas++;
            if (esCorrecto) {
                resultado.textContent = "âœ… Â¡Correcto!";
                resultado.style.color = "green";
                correctas++;
            } else {
                resultado.textContent = "âŒ Incorrecto.";
                resultado.style.color = "red";
            }

            if (contestadas === total) {
                document.getElementById("final").textContent =
                    "ğŸ‰ Has terminado. Tu puntaje: " + correctas + "/" + total;
            }
        }
    </script>
